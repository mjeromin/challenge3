{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "name": "items",
      "type": "cosmosDB",
      "databaseName": "RatingsDB",
      "collectionName": "Ratings",
      "id" : "{id}",
      "partitionKey": "{id}",
      "connectionStringSetting": "MyAccount_COSMOSDB",
      "direction": "in"
    }
  ]
}